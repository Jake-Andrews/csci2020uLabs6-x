<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" vgap="5" hgap="5">

    <Button fx:id="send" text="Send" onAction="#send"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <Button fx:id="exit" text="Exit" onAction="#exit"
            GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label  text="Message:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <TextField fx:id="message" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

</GridPane>